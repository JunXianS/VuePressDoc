//全局样式文件
body{
    font-size:14px; 
}
p{
  letter-spacing: 0.1rem;
}
p.title{
  color:#409eff;
}
.d-flex{
    display:flex;
}
.flex-jsa{
   justify-content: space-around;
}
.flex-center{
   justify-content: center;
}
.wh{
    width:100%;
    height:100%;
}
::-webkit-scrollbar{
    display:none;
}
.page .theme-default-content:not(.custom) {
    max-width: 78%;
}

.page-edit, .page-nav {
    max-width: none !important;
}
.ttimg{ 
    width: 40px;
    height:40px;

}
.action-button{
   animation: shadow 1s linear infinite;
} 
@keyframes shadow {
    0%{transform: scaleX(1) scaleY(1);}
    50% {transform: scaleX(1.08) scaleY(1.08);}
}
.home{
    padding:0!important; 
    max-width: 100%!important; 
    height: calc(100vh - 2rem);  
    background: url('/img/bg.svg') 50%/cover no-repeat;
}
.features,.doc-echarts{
   max-width:1000px!important; 
   margin: 2.5rem auto;
   text-align:center;
}
 
.doc-echarts{
    display: flex; 
    max-width:1200px!important; 
    justify-content: space-between;
    height:300px;
}
.navbar .links{
    padding:0 1.5rem!important; 
}